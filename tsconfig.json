{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "next-intl": [
        "./src/lib/i18n/next-intl-compat.ts"
      ]
    }
  },
  "include": [
    "src",
    "tests",
    "*.ts",
    "*.mts",
    "*.cts"
  ],
  "exclude": [
    "node_modules",
    "src-tauri"
  ]
}
