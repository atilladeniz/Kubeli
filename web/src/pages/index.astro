  <!-- Hero Section -->
  <section class="mx-auto flex max-w-6xl flex-col items-center px-4 sm:px-8 py-12 sm:py-20">
    <!-- Badges -->
    <div class="flex flex-wrap gap-3 mb-6 justify-center">
      <a
        href={githubUrl}
        target="_blank"
        rel="noopener"
        class="inline-flex items-center gap-2 rounded-full bg-neutral-100 px-3 py-1 text-xs font-medium text-neutral-700 hover:bg-neutral-200 transition-colors"
