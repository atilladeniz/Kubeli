  <section class="bg-neutral-50 py-16 sm:py-24">
    <div class="mx-auto max-w-3xl px-4 sm:px-8">
      <div class="text-center mb-12">
        <h2 class="text-2xl sm:text-3xl font-bold">Frequently Asked Questions</h2>
      </div>

      <FAQSection client:load />
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 sm:py-24">
    <div class="mx-auto max-w-3xl px-4 sm:px-8 text-center">
      <h2 class="text-2xl sm:text-3xl font-bold">Ready to manage Kubernetes the native way?</h2>
      <p class="text-neutral-500 mt-4 max-w-xl mx-auto">
